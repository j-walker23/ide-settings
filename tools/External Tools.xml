<toolSet name="External Tools">
  <tool name="isort" description="Sort imports in current file" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="false" showConsoleOnStdOut="true" showConsoleOnStdErr="true" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="$PyInterpreterDirectory$/isort" />
      <option name="PARAMETERS" value="--atomic $FilePath$" />
      <option name="WORKING_DIRECTORY" value="$ContentRoot$" />
    </exec>
  </tool>
  <tool name="black" description="black" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="false" showConsoleOnStdOut="true" showConsoleOnStdErr="true" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="$PyInterpreterDirectory$/cblack" />
      <option name="PARAMETERS" value="$FilePath$" />
      <option name="WORKING_DIRECTORY" value="$ContentRoot$" />
    </exec>
  </tool>
</toolSet>